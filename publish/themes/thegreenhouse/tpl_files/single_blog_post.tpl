       
       <div class="post">
				<h2 class="title">{post_title}</h2>
				<div class="story">
					<p>{post_content}</p>
				</div>
				<div class="meta">
					<p class="date">{post_date}</p>
					<p class="file">
          <a href="javascript:popWindow('{post_friend_url}',20,20,300,550,1,0)" class="readmore" title="{tell_a_friend}">{tell_a_friend}</a> | 
          <a href="javascript:popWindow('{print_url}',150,100,650,250,1,0)" class="print" title="{print}">{print}</a> | 
          {comments_count}
          </p>
          {bookmarks}
				</div>
			</div>
